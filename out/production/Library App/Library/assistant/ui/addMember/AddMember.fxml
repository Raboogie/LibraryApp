<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.assistant.ui.addMember.AddMemberController">
   <children>
      <VBox prefHeight="325.0" prefWidth="600.0">
         <children>
            <JFXTextField fx:id="name" prefHeight="30.0" promptText="Name">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="id" layoutX="10.0" layoutY="10.0" prefHeight="30.0" promptText="Member ID">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="mobile" layoutX="10.0" layoutY="35.0" prefHeight="30.0" promptText="Mobile">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="email" layoutX="10.0" layoutY="60.0" prefHeight="30.0" promptText="Email">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </JFXTextField>
         </children>
      </VBox>
      <HBox layoutY="325.0" prefHeight="75.0" prefWidth="600.0">
         <children>
            <JFXButton fx:id="saveButton" onAction="#addMember" prefHeight="75.0" prefWidth="300.0" stylesheets="@../addBook/addBook.css" text="Save" />
            <JFXButton fx:id="cancelButton" layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="75.0" prefWidth="300.0" stylesheets="@../addBook/addBook.css" text="Cancel" />
         </children>
      </HBox>
   </children>
</AnchorPane>
